<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="288dp"
    android:maxWidth="288dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemRV_Home_RV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background1"
        app:riv_corner_radius="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="328:200"/>
    <View
        android:id="@+id/guideline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/itemRV_Home_RV"
        app:layout_constraintRight_toRightOf="@id/itemRV_Home_RV"
        app:layout_constraintLeft_toLeftOf="@id/itemRV_Home_RV"
        app:layout_constraintDimensionRatio="328:40"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintRight_toRightOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:id="@+id/rating_number"
                    android:fontFamily="@font/montserrat_bold"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:id="@+id/rating"/>
            </LinearLayout>

            <TextView
                android:id="@+id/itemRV_Home_TV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kuta, Bali"
                android:textSize="14dp"
                android:textColor="#424242"
                app:fontFamily="@font/montserrat_semi_bold"
                android:layout_marginTop="8dp"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/itemRV_Home_TV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bali is an Indonesian island known as paradise Island"
                android:textColor="#7D7D7D"
                android:textSize="12dp"
                android:ellipsize="end"
                app:fontFamily="@font/montserrat_regular"
                android:lines="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>