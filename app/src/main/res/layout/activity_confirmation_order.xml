<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationOrder">

    <include
        android:id="@+id/toolbar_confirmOrder"
        layout="@layout/toolbar_elevation"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/NSV_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_confirmOrder"
        app:layout_constraintBottom_toTopOf="@id/continueBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:layout_marginBottom="16dp">

                <include
                    android:id="@+id/infoHotelGuest"
                    layout="@layout/confirmation_hotel"
                    android:visibility="gone"/>
                <include
                    android:id="@+id/infoFlight"
                    layout="@layout/confirmation_flight"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/infoTrain"
                    layout="@layout/confirmation_train"
                    android:visibility="gone"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dataGuestTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Tamu"
                        android:textColor="#424242"
                        android:textSize="16dp"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/montserrat_semi_bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E4E7E8"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp">

                        <LinearLayout
                            android:id="@+id/gueastDataLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tamu"
                                android:fontFamily="@font/montserrat_medium"/>

                            <TextView
                                android:id="@+id/tamu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14dp"
                                android:textColor="#263238"
                                android:text="ABC"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="16dp"/>

                            <LinearLayout
                                android:id="@+id/linear_dataPeserta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/isiDataPeserta"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Isi data peserta"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=">"
                                    android:gravity="right"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:layout_weight="1"/>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/specialRequestLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Permintaan Khusus"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="#0E64FF"/>
                            <TextView
                                android:id="@+id/specialRequest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14dp"
                                android:textColor="#0E64FF"
                                android:text="Kamar Bebas Rokok"/>

                            <TextView
                                android:id="@+id/specialRequestAdd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tambah Permintaan Khusus"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/montserrat_semi_bold"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rincian Harga"
                        android:textColor="#424242"
                        android:textSize="16dp"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/montserrat_semi_bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E4E7E8"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Superior Room"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp. 800.000"
                                android:gravity="right"
                                android:layout_weight="1"/>
                            
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Subtotal"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp. 800.000"
                                android:gravity="right"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pajak"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Termasuk"
                                android:gravity="right"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp. 800.000"
                                android:gravity="right"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:text="Lanjut"
        app:cornerRadius="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_confirmOrder"
        android:background="@drawable/shadow_uptodown"/>

</android.support.constraint.ConstraintLayout>