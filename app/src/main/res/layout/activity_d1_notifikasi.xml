<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".D1Notifikasi">

    <include
        android:id="@+id/d1_toolbar"
        layout="@layout/toolbar_elevation"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/d1_toolbar"
        android:background="@drawable/shadow_uptodown"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/d1_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RV_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!--<include layout="@layout/d1_notifikasi_item"/>-->

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_train_white_24dp"
                    android:tint="@color/c42"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/TV_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:text="Rabu, 10 April 2019"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"/>
                        <android.support.design.chip.Chip
                            android:id="@+id/CHIP_status"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Berhasil"
                            app:chipBackgroundColor="@color/colorPrimary"
                            android:textColor="@android:color/white"
                            android:textAppearance="@style/smallChip"
                            app:chipCornerRadius="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/TV_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surabaya"
                            style="@style/SemiBold_42_16dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swap_horiz_black_24dp"
                            android:tint="@color/c42"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:id="@+id/TV_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yogyakarta"
                            style="@style/SemiBold_42_16dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/TV_infoTrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Argo Parahyangan"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/TV_total_pack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1 Penumpang"
                            android:layout_weight="1"
                            android:layout_marginRight="16dp"/>
                        <TextView
                            android:id="@+id/TV_routeType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulang Pergi"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/cE4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_location_city_black_24dp"
                        android:tint="@color/c42"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Rabu, 10 April 2019"
                                android:textSize="10dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <android.support.design.chip.Chip
                                android:id="@+id/CHIP_status"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="Dipesan"
                                app:chipBackgroundColor="@color/colorYellow"
                                android:textColor="@color/c42"
                                android:textAppearance="@style/smallChip"
                                app:chipCornerRadius="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_route"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Labuan Bajo Trip"
                                style="@style/SemiBold_42_16dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/TV_infoTrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sweet Tour"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_total_pack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="2 Mei 2019 - 3 Mei 2019"
                                android:layout_weight="1"
                                android:layout_marginRight="16dp"/>
                            <TextView
                                android:id="@+id/TV_routeType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Malam"
                                android:layout_gravity="bottom"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/cE4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_location_city_black_24dp"
                        android:tint="@color/c42"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="Rabu, 10 April 2019"
                                android:textSize="10dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <android.support.design.chip.Chip
                                android:id="@+id/CHIP_status"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="Berhasil"
                                app:chipBackgroundColor="@color/colorPrimary"
                                android:textColor="@android:color/white"
                                android:textAppearance="@style/smallChip"
                                app:chipCornerRadius="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_route"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Labuan Bajo Trip"
                                style="@style/SemiBold_42_16dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/TV_infoTrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sweet Tour"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/TV_total_pack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="2 Mei 2019 - 3 Mei 2019"
                                android:layout_weight="1"
                                android:layout_marginRight="16dp"/>
                            <TextView
                                android:id="@+id/TV_routeType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Malam"
                                android:layout_gravity="bottom"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/cE4"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>