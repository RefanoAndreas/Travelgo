<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterTour">

    <!--<include-->
        <!--android:id="@+id/toolbar_filter"-->
        <!--layout="@layout/toolbar_elevation"/>-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Reset"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/submit_saveChanges_filterTour"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Tanggal Perjalanan"
                        android:textColor="#7D7D7D"
                        android:textSize="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Berangkat"
                                android:textColor="#7D7D7D"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/startDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="04 Apr 2019"
                                android:textColor="#163E7F"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Kembali"
                                android:textColor="#424242"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/endDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="right"
                                android:text="14 Apr 2019"
                                android:textColor="#163E7F"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Harga minimum"
                                android:textColor="#7D7D7D"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/minimumPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Rp 300.000"
                                android:textColor="#163E7F"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Harga Maximum"
                                android:textColor="#424242"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/maximumPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="right"
                                android:text="Rp 2.600.000"
                                android:textColor="#163E7F"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                        android:id="@+id/rangeSeekbarPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        app:bar_color="#CCCCCC"
                        app:bar_highlight_color="#163E7F"
                        app:corner_radius="10"
                        app:data_type="_integer"
                        app:gap="200000"
                        app:left_thumb_color="#0E64FF"
                        app:max_value="3000000"
                        app:min_value="300000"
                        app:right_thumb_image="@drawable/crystalrange_rightthumb"
                        app:left_thumb_image="@drawable/crystalrange_leftthumb"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lokasi"
                            android:textColor="#7D7D7D"
                            android:textSize="12dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/see_locationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@color/colorPrimary"
                            android:gravity="right"
                            android:textSize="12dp"/>

                    </LinearLayout>
                    <android.support.design.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kuta"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jimbaran"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Legian"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GWK"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kuta"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />

                    </android.support.design.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jangka Waktu"
                            android:textColor="#7D7D7D"
                            android:textSize="12dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/see_durationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@color/colorPrimary"
                            android:gravity="right"
                            android:textSize="12dp"/>

                    </LinearLayout>
                    <android.support.design.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Hari 3 Malam"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Hari 2 Malam"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />
                        <android.support.design.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Hari 1 Malam"
                            android:textColor="#424242"
                            android:textSize="12dp"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipCornerRadius="10dp"
                            app:chipStrokeColor="#707070"
                            app:chipStrokeWidth="1dp" />

                    </android.support.design.chip.ChipGroup>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@drawable/shadow_uptodown"/>

    <android.support.design.button.MaterialButton
        android:id="@+id/submit_saveChanges_filterTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:text="save changes"
        app:cornerRadius="0dp"/>

</android.support.constraint.ConstraintLayout>