<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qreatiq.travelgo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".splashDuration"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name=".TransactionDetail"
            android:label="Transaction Detail"></activity>
        <activity
            android:name=".HistoryTransaction"
            android:label="History Transaction"></activity>
        <activity android:name=".CityDetail" />
        <activity android:name=".TourDetail"
            android:label="Detail Tour"/>
        <activity android:name=".Tour"></activity>
        <activity android:name=".Home" />
        <activity android:name=".BottomNavContainer"></activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp" />
        <activity android:name=".LogIn">

        </activity>
        <activity android:name=".LogSign" />
        <activity
            android:name=".TourCreatePackage"
            android:label="Create Tour Package" />
        <activity
            android:name=".TourCreate"
            android:label="Create Packages" />
        <activity
            android:name=".TourList"
            android:label="List Tour Packages" />
        <activity
            android:name=".TourEdit"
            android:label="Edit Tour" />
        <activity
            android:name=".ProfileEdit"
            android:label="Edit Profile" />
        <activity
            android:name=".MainActivity"
            android:label="My Profile" />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges= "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity android:name="com.facebook.CustomTabActivity" android:exported="true">
            <intent-filter> <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>