<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lion Air"
        android:paddingLeft="40dp"
        style="@style/SemiBold_42_16dp"/>
    <TextView
        android:id="@+id/class_name"
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_train_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/depart_date_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/depart_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bandara Juanda International Airport"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:paddingLeft="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_train_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arrive_date_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamis, 11 Apr 2019 . 06:00 - CGK Jakarta"/>
            <TextView
                android:id="@+id/arrive_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bandara Cengkareng Jakarta"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>