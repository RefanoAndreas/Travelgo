<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesanan Anda"
            android:textColor="#424242"
            android:textSize="16dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat_semi_bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E7E8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/hotelName_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JW Marriott Hotel Surabaya"
                android:fontFamily="@font/montserrat_medium"/>

            <TextView
                android:id="@+id/roomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Superior Room"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check-in"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check-out"
                    android:gravity="right"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/checkInDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="#263238"
                    android:text="Selasa, 30 April 2019"/>
                <TextView
                    android:id="@+id/checkOutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="14dp"
                    android:textColor="#263238"
                    android:text="Sabtu, 04 Mei 2019"/>

            </LinearLayout>

            <TextView
                android:id="@+id/totalGuestOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 Tamu, 1 Kamar (21m)"
                android:layout_marginTop="16dp"
                android:textColor="#263238"/>
            <TextView
                android:id="@+id/bedType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipe Bed : King Size Bed"
                android:textColor="#263238"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wi-Fi Gratis"
                android:textColor="#263238"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termasuk Sarapan"
                android:textColor="#263238"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Refundable"
                android:textColor="#263238"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>